<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Projects · NFT Mint' %></title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Site CSS from /public -->
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    :root{
      --parallax-speed: 0.25; /* lower = subtler */
    }
    html, body { height: 100%; margin: 0; background:#000; overflow-x:hidden; }

    /* Page wrapper */
    .projects-page {
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      isolation: isolate;
    }

    /* Parallax background */
    .projects-bg{
      position: fixed; inset: 0;
      background: url("/images/q_project_bg.png") center center / cover no-repeat;
      will-change: transform; z-index: -2; transform: translateY(0);
    }

    /* Tint overlay */
    .projects-tint{
      position: fixed; inset: 0;
      background: rgba(0,0,0,.35);
      z-index: -1; pointer-events: none;
    }

    /* Navbar */
    .navbar.bg-dark { background-color: rgba(0,0,0,0.72) !important; backdrop-filter: blur(6px); }

    /* Hero */
    .projects-hero {
      text-align: center; color: #fff;
      padding: 6rem 1rem 2rem;
      background: rgba(0, 0, 0, 0.35);
      backdrop-filter: blur(5px);
      border-radius: 10px;
      margin: 0 auto 2rem;
      max-width: 900px;
    }
    .projects-hero .lead { opacity: .9; }

    /* Filters */
    .project-filters .btn {
      border-color: rgba(255,255,255,.3);
      color:#fff; backdrop-filter: blur(4px);
    }
    .project-filters .btn.active,
    .project-filters .btn:hover { background:#c87ac5; border-color:#c87ac5; }

    /* Main grid glass */
    .projects-main {
      flex: 1; padding-bottom: 5rem;
      background: rgba(0,0,0,.30);
      backdrop-filter: blur(5px);
      border-radius: 10px;
      margin: 0 auto; width: 95%;
    }

    .project-card {
      height: 100%; border-radius: 16px; overflow: hidden;
      background: rgba(17,17,17,.25);
      border: 1px solid rgba(200,122,197,.3);
      color: #f5f5f7; box-shadow: 0 8px 25px rgba(0,0,0,.35);
      backdrop-filter: blur(8px);
      transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
    }
    .project-card:hover{
      transform: translateY(-4px);
      box-shadow: 0 0 18px rgba(200,122,197,.6), 0 0 36px rgba(100,200,255,.35);
      border-color:#c87ac5;
    }

    .project-thumb{ width:100%; aspect-ratio: 16 / 9; object-fit: cover; filter: brightness(.9) contrast(1.05); }
    .project-title{ color:#ff4fd8; }
    .badge-tag{ background: rgba(255,255,255,.08); border:1px solid rgba(255,255,255,.25); color:#fff; font-weight:500; }

    .more-cta a.btn{ background:#c87ac5; border-color:#c87ac5; }

    footer.bg-dark{ background-color: rgba(0,0,0,.82) !important; backdrop-filter: blur(6px); margin-top: auto; }

    @media (prefers-reduced-motion: reduce){
      .projects-bg{ transform: none !important; }
    }
  </style>
</head>

<body>
  <div class="projects-page">
    <!-- Parallax layers -->
    <div class="projects-bg" aria-hidden="true"></div>
    <div class="projects-tint" aria-hidden="true"></div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="/">NFT Mint</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link active" href="/projects">Projects</a></li>
            <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
            <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Hero -->
    <header class="projects-hero">
      <div class="container">
        <h1 class="display-6 fw-bold">Projects</h1>
        <p class="lead">Drops, experiments, and works-in-progress exploring art × blockchain.</p>
        <div class="project-filters d-flex gap-2 justify-content-center mt-3">
          <button class="btn btn-sm btn-outline-light active" type="button">All</button>
          <button class="btn btn-sm btn-outline-light" type="button">1/1s</button>
          <button class="btn btn-sm btn-outline-light" type="button">Collections</button>
          <button class="btn btn-sm btn-outline-light" type="button">Experiments</button>
        </div>
      </div>
    </header>

    <!-- Projects grid -->
    <main class="projects-main">
      <div class="container">
        <div class="row g-4">
          <!-- Card 1 -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card project-card h-100">
              <img src="/images/qool_cat.png" alt="Qool Cat" class="project-thumb">
              <div class="card-body">
                <h3 class="h5 project-title mb-2">Qool Cat — Night Run</h3>
                <p class="small mb-3">Neon-soaked portrait series with LA skyline + vaporwave vibes.</p>
                <div class="d-flex flex-wrap gap-2 mb-3">
                  <span class="badge badge-tag">1/1</span>
                  <span class="badge badge-tag">Ethereum</span>
                  <span class="badge badge-tag">Portrait</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="/projects" class="btn btn-sm btn-outline-light">View</a>
                  <a href="#" class="text-decoration-none" target="_blank">View on OpenSea →</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Card 2 -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card project-card h-100">
              <img src="/images/featured.jpg" alt="Featured Drop" class="project-thumb">
              <div class="card-body">
                <h3 class="h5 project-title mb-2">Free & FLY — Genesis</h3>
                <p class="small mb-3">Motion-infused city palms and synth skies. First collection drop.</p>
                <div class="d-flex flex-wrap gap-2 mb-3">
                  <span class="badge badge-tag">Collection</span>
                  <span class="badge badge-tag">Tezos</span>
                  <span class="badge badge-tag">Vaporwave</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="/projects" class="btn btn-sm btn-outline-light">View</a>
                  <a href="#" class="text-decoration-none" target="_blank">Marketplace →</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Card 3 -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="card project-card h-100">
              <img src="/images/q_splash.png" alt="Process Study" class="project-thumb">
              <div class="card-body">
                <h3 class="h5 project-title mb-2">Process Study — Skyline Neon</h3>
                <p class="small mb-3">Exploratory studies on color grading, grain, and neon bloom.</p>
                <div class="d-flex flex-wrap gap-2 mb-3">
                  <span class="badge badge-tag">Experiment</span>
                  <span class="badge badge-tag">Animation</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="/projects" class="btn btn-sm btn-outline-light">View</a>
                  <a href="#" class="text-decoration-none" target="_blank">Process Notes →</a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="text-center more-cta mt-5">
          <p class="text-white-50 mb-3">Interested in collaborations or commissions?</p>
          <a class="btn btn-lg btn-primary" href="/contact">Contact Me</a>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
      <div class="container">
        <p class="mb-1">&copy; 2025 Quinn Harris · Personal NFT Mint</p>
        <a href="mailto:QuinnsDesign@hotmail.com" class="text-primary text-decoration-none">Email: QuinnsDesign@hotmail.com</a>
      </div>
    </footer>
  </div>

  <!-- Parallax script -->
  <script>
    (function(){
      const bg = document.querySelector('.projects-bg');
      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (!bg || prefersReduced) return;

      let ticking = false;
      function onScroll(){
        if (ticking) return;
        ticking = true;
        requestAnimationFrame(() => {
          const speed = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--parallax-speed')) || 0.25;
          bg.style.transform = `translateY(${window.scrollY * speed}px)`;
          ticking = false;
        });
      }
      window.addEventListener('scroll', onScroll, { passive: true });
      onScroll();
    })();
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

