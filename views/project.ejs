<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || (project && project.title) || 'Project · NFT Mint' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold text-primary" href="/">NFT Mint</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/projects">Projects</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container py-5">
    <% if (!project) { %>
      <div class="alert alert-warning">Project not found.</div>
    <% } else { %>
      <div class="row g-4 align-items-start">
        <div class="col-12 col-lg-6">
          <img src="<%= project.image %>" alt="<%= project.title %>" class="img-fluid rounded shadow">
        </div>
        <div class="col-12 col-lg-6">
          <h1 class="h3 mb-2"><%= project.title %></h1>
          <p class="text-muted"><%= project.summary %></p>

          <% if (project.tags && project.tags.length) { %>
            <div class="mb-3">
              <% project.tags.forEach(t => { %>
                <span class="badge bg-secondary me-1 mb-1"><%= t %></span>
              <% }) %>
            </div>
          <% } %>

          <% if (project.marketplaceUrl) { %>
            <a class="btn btn-primary me-2" href="<%= project.marketplaceUrl %>" target="_blank">View on Marketplace</a>
          <% } %>
          <a class="btn btn-outline-secondary" href="/projects">Back to Projects</a>

          <% if (project.description) { %>
            <hr>
            <p><%= project.description %></p>
          <% } %>
        </div>
      </div>
    <% } %>
  </main>

  <footer class="bg-dark text-white text-center py-3 mt-5">
    <div class="container">
      <p class="mb-1">&copy; 2025 Quinn Harris · Personal NFT Mint</p>
      <a href="mailto:QuinnsDesign@hotmail.com" class="text-primary text-decoration-none">Email: QuinnsDesign@hotmail.com</a>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
