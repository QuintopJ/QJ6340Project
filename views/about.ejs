  <!-- Site CSS from /public -->
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    :root{
      --parallax-speed: 0.22;
      --neon-pink: #ff4fd8;
      --accent: #c87ac5;
    }

    html, body { height: 100%; margin: 0; background:#000; overflow-x:hidden; }

    /* Page wrapper */
    .about-page{
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      isolation: isolate;
    }

    /* Parallax background (served from /public/images) */
    .about-bg{
      position: fixed; inset:0;
      background: url("/images/q_about_bg.png") center / cover no-repeat;
      will-change: transform; z-index:-2; transform: translateY(0);
    }
    .about-tint{ position:fixed; inset:0; background:rgba(0,0,0,.38); z-index:-1; pointer-events:none; }

    /* Navbar */
    .navbar.bg-dark{ background-color: rgba(0,0,0,.72) !important; backdrop-filter: blur(6px); }

    /* Hero */
    .hero{
      color:#fff; text-align:center;
      padding: 6rem 1rem 2rem;
      background: rgba(0,0,0,.35); backdrop-filter: blur(6px);
      border-radius: 12px; margin: 0 auto 2rem; max-width: 960px;
    }
    .hero h1{ letter-spacing:.5px; }
    .tagline{ opacity:.9; }

    /* Avatar */
    .avatar{
      width: 132px; height:132px; object-fit:cover; border-radius: 50%;
      border: 2px solid rgba(255,255,255,.35);
      box-shadow: 0 0 18px rgba(200,122,197,.6), 0 0 28px rgba(120,200,255,.25);
    }

    /* Glass cards */
    .glass{
      background: rgba(17,17,17,.26);
      border: 1px solid rgba(200,122,197,.28);
      border-radius: 16px; color:#f5f5f7; backdrop-filter: blur(10px);
      box-shadow: 0 8px 24px rgba(0,0,0,.35);
      transition: border-color .25s, box-shadow .25s, transform .25s;
    }
    .glass:hover{ transform: translateY(-3px); border-color: var(--accent);
      box-shadow: 0 0 16px rgba(200,122,197,.6), 0 0 32px rgba(100,200,255,.35); }

    .neon-title{ color: var(--neon-pink); }

    .badge-tag{
      background: rgba(255,255,255,.08);
      border:1px solid rgba(255,255,255,.25);
      color:#fff; font-weight:500;
    }

    .cta .btn{ background: var(--accent); border-color: var(--accent); }

    footer.bg-dark{ background-color: rgba(0,0,0,.82) !important; margin-top:auto; backdrop-filter: blur(6px); }

    /* De-emphasize highlights accordion */
    .accordion-button{ background: transparent; color:#fff; }
    .accordion-button:focus{ box-shadow: none; }
    .accordion-item{ background: transparent; border-color: rgba(255,255,255,.2); }
    .accordion-button.collapsed{ opacity: .75; }
    .accordion-body{ color: rgba(255,255,255,.8); }

    /* Respect reduced motion */
    @media (prefers-reduced-motion: reduce){ .about-bg{ transform:none !important; } }
  </style>
</head>
